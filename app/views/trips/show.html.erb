<h2><%= @trip.origin.capitalize %> ‚ü∂ <%= @trip.destination.capitalize %> </h2>
<div style="margin-left: 100px">

    <div>
      <b>Owner Details : </b> <br/>
      Name :  <%= @trip.driver.name %> <br/>
      Mobile no : <%= @trip.driver.mobile_no %><br/>
    </div>

    <br/>

    <div>
      <b> Trip Details : </b><br/>
      Starting Time : <%= @trip.start_time.strftime("%B %e, %Y at %I:%M %p") %><br/>
      Available Seats : <%= @trip.available_seats %><br/>
      <% if current_user.is_rider? %>
        <% if @trip.available_seats > 0  %>
          <div id="req" data-trip_id = '<%=@trip.id%>'>
          <%= link_to 'Request', requests_path(:trip_id => @trip.id), remote: true, method: :post, id:'request-link', class: 'req-btn' %>
          </div>
        <% end %>
      <% end %>
    </div>

    <br/>

      <div id="requesters">
        <%= render 'requesters' %>
      </div>

</div>

<% if current_user.is_rider? %>
    <div class="redirect-links">
      <%= link_to 'Back', trips_path, class: 'txt-btn' %>
    </div>
<% else %>
    <div class="redirect-links">
      <%= link_to 'Cancel trip', trip_path(@trip), method: :delete, class: 'txt-btn' %>
    </div>
<% end %>

<script>

$('.req-btn').click(function(){
  $('.req-btn').hide();
})

</script>
